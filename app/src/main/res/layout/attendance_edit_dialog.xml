<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_centerInParent="true"
    app:cardBackgroundColor="@color/grey_transparent"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_bg">

            <TextView
                android:id="@+id/tv_seatNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="B14101079"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgrounddark"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:id="@+id/tv_name"
                    android:layout_height="wrap_content"
                    android:text="Saad Abdul Qadir"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father's Name: "
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:id="@+id/tv_fatherName"
                    android:layout_height="wrap_content"
                    android:text="Abdul Qadir"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class: "
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:id="@+id/tv_classId"
                    android:layout_height="wrap_content"
                    android:text="Morning BSCS Sec A"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2.01">

            <TextView
                android:id="@+id/tv_absent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/bottom_left_rounded_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="Absent"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".01"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/tv_present"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_right_rounded_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="Present"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>